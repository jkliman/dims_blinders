<Window x:Class="StarCitizenBlinders.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DIMS Blinders - Settings"
        Height="500" Width="420"
        MinHeight="400" MinWidth="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="#1E1E1E">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3F3F3F"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#CCCCCC"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Viewport Settings -->
        <GroupBox Grid.Row="0" Header="Viewport Size (visible area when blinders active)" Foreground="#CCCCCC" Margin="0,0,0,15" BorderBrush="#3F3F3F">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Width:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" x:Name="TxtViewportWidth" Margin="0,0,15,0"/>
                <TextBlock Grid.Column="2" Text="Height:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Column="3" x:Name="TxtViewportHeight"/>
            </Grid>
        </GroupBox>

        <!-- Hotkey Settings -->
        <GroupBox Grid.Row="1" Header="Hotkey" Foreground="#CCCCCC" Margin="0,0,0,15" BorderBrush="#3F3F3F">
            <StackPanel Margin="10">
                <TextBlock Text="Press the key combination you want to use:" Margin="0,0,0,10"/>
                <TextBox x:Name="TxtHotkey" IsReadOnly="True" TextAlignment="Center"
                         FontSize="14" FontWeight="Bold" PreviewKeyDown="TxtHotkey_PreviewKeyDown"/>
                <TextBlock Text="Click the box above and press your desired hotkey combination"
                           FontSize="10" Foreground="#888888" Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Appearance Settings -->
        <GroupBox Grid.Row="2" Header="Appearance" Foreground="#CCCCCC" Margin="0,0,0,15" BorderBrush="#3F3F3F">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Blinder Color:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" x:Name="TxtBlinderColor" Margin="0,0,15,0"/>
                <TextBlock Grid.Column="2" Text="Opacity:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Column="3" x:Name="TxtOpacity"/>
            </Grid>
        </GroupBox>

        <!-- Mouse Settings -->
        <GroupBox Grid.Row="3" Header="Mouse" Foreground="#CCCCCC" Margin="0,0,0,15" BorderBrush="#3F3F3F">
            <StackPanel Margin="10">
                <CheckBox x:Name="ChkConfineMouse" Content="Confine mouse cursor to viewport area"/>
            </StackPanel>
        </GroupBox>

        <!-- Manual Bounds -->
        <GroupBox Grid.Row="4" Header="Manual Bounds Override" Foreground="#CCCCCC" Margin="0,0,0,15" BorderBrush="#3F3F3F">
            <StackPanel Margin="10">
                <CheckBox x:Name="ChkUseManualBounds" Content="Use manual bounds (override auto-calculation)" Margin="0,0,0,10"/>
                <TextBlock x:Name="TxtDebug" FontFamily="Consolas" FontSize="10" TextWrapping="Wrap" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Left:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="TxtMouseLeft" Margin="0,0,15,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Top:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                    <TextBox Grid.Row="0" Grid.Column="3" x:Name="TxtMouseTop" Margin="0,0,0,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Right:" VerticalAlignment="Center" Margin="0,5,5,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="TxtMouseRight" Margin="0,5,15,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Bottom:" VerticalAlignment="Center" Margin="0,5,5,0"/>
                    <TextBox Grid.Row="1" Grid.Column="3" x:Name="TxtMouseBottom" Margin="0,5,0,0"/>
                </Grid>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Test Bounds" Click="BtnApplyMouseBounds_Click" HorizontalAlignment="Left"/>
                    <TextBlock Text="Test live, then Save to keep" Foreground="#888888" FontSize="10" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Status -->
        <StackPanel Grid.Row="5" VerticalAlignment="Bottom" Margin="0,0,0,15">
            <TextBlock x:Name="TxtStatus" Text="" Foreground="#4EC9B0" TextAlignment="Center"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Click="BtnSave_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="BtnCancel_Click" Background="#3F3F3F"/>
        </StackPanel>
    </Grid>
    </ScrollViewer>
</Window>
